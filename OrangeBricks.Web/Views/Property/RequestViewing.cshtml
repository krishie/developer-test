@model OrangeBricks.Web.Controllers.Property.ViewModels.RequestViewingViewModel

@{
    ViewBag.Title = "Request Viewing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Request Viewing</h2>

<p>When would you like to view the @Model.PropertyType on @Model.StreetName?</p>

@using (Html.BeginForm("RequestViewing", "Property", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ViewingDate, "Select a viewing date", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Hidden("PropertyId", Model.PropertyId)
            @Html.TextBoxFor(m => m.ViewingDate, new { @class = "form-control", id = "txtViewingDate" })
            @Html.TextBoxFor(m => m.ViewingTime, new { @class = "form-control", id = "txtViewingTime" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Request Viewing" />
        </div>
    </div>
}

<script type="text/javascript">
    $().ready(function () {
        $('#txtViewingDate').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true
        });
    });
</script>